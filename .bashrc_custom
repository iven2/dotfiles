## limited grep that limites # of character outputs
function lgrep () {
   if [ $# -ne 2 ]
   then
        echo "Usage: lgrep patter path"; return 66;
   fi
    grep -ri -o ".\{0,50\}${1}.\{0,190\}" ${2}
}

